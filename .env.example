# Internal Service API Key
# Generate a secure random key for production use
INTERNAL_API_KEY=your_secure_random_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
# SQLite database path is automatically set in the application
# DATABASE_URL=sqlite:///instance/dsa_problems.db

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting (in seconds)
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log 